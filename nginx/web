server {
    if ($host = horn.dev) {
        return 301 https://daanhorn.nl$request_uri;
    }

    server_name daanhorn.nl;
    location / {
        alias /var/www/horn.dev/public_html/;
        autoindex on;
    }

    listen 443 ssl;
    ssl_certificate /var/certs/daanhorn.nl/fullchain.pem;
    ssl_certificate_key /var/certs/daanhorn.nl/privkey.pem;
    include /var/nginx-conf/options-ssl-nginx.conf;
    ssl_dhparam /var/nginx-conf/ssl-dhparams.pem;
}
server {
    if ($host = "horn.dev|daanhorn.nl") {
        return 301 https://daanhorn.nl$request_uri;
    }

    listen 80;
    server_name daanhorn.nl;
    return 404;
}