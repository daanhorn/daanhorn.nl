server {
    server_name daanhorn.nl;
    location / {
        alias /var/www/horn.dev/public_html/;
        autoindex on;
    }

    listen 443 ssl;
    ssl_certificate /home/hugo/cert/daanhorn.nl/fullchain.pem;
    ssl_certificate /home/hugo/cert/daanhorn.nl/privkey.pem;
    include /home/hugo/nginx/options-ssl-nginx.conf;
    ssl_dhparam /home/hugo/nginx/ssl-ssl_dhparams.pem;
}
server {
    if ($host = daanhorn.nl) {
        return 301 https://$host$request_uri;
    }

    listen 80;
    server_name daanhorn.nl;
    return 404;
}